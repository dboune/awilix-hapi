{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2016",
      "lib": ["es2016"],
      "sourceMap": false,
      "outDir": "./dist",
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "declaration": true
    },
    "include": [
      "src/**/**.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
